	<script src="js/data_extract.js"></script>
	<style>
		select {
			font-size: 15px;
			font-family: ubuntu;
			border: 0;
			-webkit-appearance: none;
			-moz-appearance:none;
			background: #0088cc url(Images/arrow.png) no-repeat 90% center;
			width: 150px;
